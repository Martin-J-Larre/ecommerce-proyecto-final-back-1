<form
	class="sections-container addProductForm d-flex flex-column justify-content-start align-items-center m-0 bg-color py-3 text-white"
	action="/products"
	method="POST"
>
	<h3 class="text-center mb-3 mt-1">Add Products</h3>

	<div class="form-group w-75 mb-4">
		<input class="form-control" type="text" name="title" id="title" placeholder="Title..." />
	</div>
    
	<div class="form-group w-75 mb-4">
        <input class="form-control" type="number" name="price" id="price" placeholder="Price..." />
	</div>
    
    <div class="form-group w-75 mb-4">
        <input class="form-control" type="text" name="description" id="description" placeholder="Description..." />
    </div>

	<div class="form-group w-75 mb-4">
        <input class="form-control" type="url" name="img" id="img" placeholder="Img..." />
	</div>
    
    <div class="form-group w-75 mb-4">
        <input class="form-control" type="number" name="stock" id="stock" placeholder="stock..." />
    </div>

	<div class="d-flex justify-content-center mt-3">
		<button class="btn btn-primary" type="submit">Add Product</button>
	</div>
</form>